<div class="container">
    <form asp-controller="Member" asp-action="Create" method="post">
        <div class="row">
            <div class="col mb-4">
                <label asp-for="FirstName" class="mb-1">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
            <div class="col mb-4">
                <label asp-for="LastName" class="mb-1">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col mb-4">
                <label asp-for="Email" class="mb-1 font-size:"></label>
                <input asp-for="Email" type="email" class="form-control" />
            </div>
            <div class="col mb-4">
                <label asp-for="teamId" class="mb-1 font-size:">Team Id</label>
                <input asp-for="teamId" type="number" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col mb-4">
                <label asp-for="Role" class="mb-1 font-size:">Role for team</label>
                <input asp-for="Role" type="number" class="form-control" />
            </div>
            <div class="col mb-4">
            </div>
        </div>

        <div class="row">
            <div class="col">
            </div>
            <div class="col">
            </div>
            <div class="col">
            </div>
            <div class="col">
            </div>
            <div class="col">
            </div>
            <div class="col">
            </div>
            <div class="col">
                <button class="btn btn-danger pe-xxl-4 text-center" asp-action="Index">Back</button>
                <button class="btn btn-primary pe-xxl-4 text-center" asp-action="Create">Save</button>
            </div>
        </div>
    </form>
</div>