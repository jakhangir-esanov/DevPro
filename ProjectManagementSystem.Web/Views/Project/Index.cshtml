@using ProjectManagementSystem.Service.DTOs.Projects;
@model IEnumerable<ProjectResultDto>;

<div class="row">
    <div class="col-11">
        <h1 class="mb-3 mt-2">Projects</h1>
    </div>
    <div class="col-1 mt-4">
        <p><a class="btn btn-primary" asp-controller="Project" asp-action="Create" style="background-color: green">Create</a></p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            @{
                var id = Model.FirstOrDefault();
            }
            <th>@Html.DisplayNameFor(item => id.Id)</th>
            <th>@Html.DisplayNameFor(item => id.Name)</th>
            <th>@Html.DisplayNameFor(item => id.Description)</th>
            <th>@Html.DisplayNameFor(item => id.StartDate)</th>
            <th>@Html.DisplayNameFor(item => id.EndDate)</th>
            <th>@Html.DisplayNameFor(item => id.Status)</th>
            <th>@Html.DisplayNameFor(item => id.Team.Id)</th>
            <th>Edit</th>
            <th>Tasks</th>
            <th>Detail</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(i => item.Id)
                </th>
                <th>
                    @Html.DisplayFor(i => item.Name)
                </th>
                <th>
                    @Html.DisplayFor(i => item.Description)
                </th>
                <th>
                    @Html.DisplayFor(i => item.StartDate)
                </th>
                <th>
                    @Html.DisplayFor(i => item.EndDate)
                </th>
                <th>
                    @Html.DisplayFor(i => item.Status)
                </th>
                <th>
                    @Html.DisplayFor(i => item.Team.Id)
                </th>
                <th>
                    <p><a class="btn btn-primary" asp-controller="Project" asp-action="Edit" asp-route-id="@item.Id">Edit</a></p>
                </th>
                <th>
                    <form asp-controller="Project" asp-action="Task" asp-route-id="@item.Id">
                        <button class="btn btn-success btn-rounded mb-3" style="background-color: orange">Tasks</button>
                    </form>
                </th>
                <th>
                    <p><a class="btn btn-primary" asp-controller="Project" asp-action="Detail" asp-route-id="@item.Id" style="background-color: magenta">Detail</a></p>
                </th>
                <th>
                    <form asp-controller="Project" asp-action="Delete" asp-route-id="@item.Id">
                        <button class="btn btn-success btn-rounded mb-3" style="background-color: red">Delete</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>